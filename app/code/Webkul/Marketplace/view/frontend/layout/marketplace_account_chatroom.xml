<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
  
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Marketplace Chat Room</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="main.content" htmlTag="main"  htmlClass="page-main verifymobile"/>
 
        <referenceContainer name="content">
            <block class="Webkul\Marketplace\Block\Account\Chatroom" name="marketplace_account_chatroom" template="account/chatroom.phtml" cacheable="false"/>
        </referenceContainer>

        <referenceContainer name="sidebar.additional" remove="true" />
    </body>
</page>
